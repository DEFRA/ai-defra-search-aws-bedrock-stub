{
  "mappings": [
    {
      "priority": 1,
      "request": {
        "method": "POST",
        "urlPathPattern": "/model/anthropic\\.claude-.*/converse",
        "bodyPatterns": [
          {
            "matchesJsonPath": "$.messages[1]"
          },
          {
            "matchesJsonPath": "$.messages[2].content[*].text",
            "contains": "Is it good practice"
          }
        ]
      },
      "response": {
        "status": 200,
        "headers": {"Content-Type": "application/x-amz-json-1.1"},
        "bodyFileName": "is_ucd_good_practice_response.json",
        "fixedDelayMilliseconds": 2000
      }
    },
    {
      "priority": 2,
      "request": {
        "method": "POST",
        "urlPathPattern": "/model/anthropic\\.claude-.*/converse",
        "bodyPatterns": [
          {
            "matchesJsonPath": "$.messages[?(@.role == 'user')]",
            "contains": "What is UCD"
          }
        ]
      },
      "response": {
        "status": 200,
        "headers": {"Content-Type": "application/x-amz-json-1.1"},
        "bodyFileName": "what_is_ucd_response.json",
        "fixedDelayMilliseconds": 2000
      }
    }
  ]
}